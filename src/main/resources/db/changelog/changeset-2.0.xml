<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="1" author="your-username">
        <createTable tableName="batch">
            <column name="batch_id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="batch_name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(255)" />
        </createTable>
    </changeSet>

    <changeSet id="1" author="yourname">
        <createTable tableName="department">
            <column name="department_id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="department_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create courses table -->
    <changeSet id="2" author="yourname">
        <createTable tableName="courses">
            <column name="course_id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="course_name" type="VARCHAR(255)"/>
            <column name="course_description" type="VARCHAR(255)"/>
            <column name="duration" type="VARCHAR(255)"/>
            <column name="department_id" type="BIGINT"/>

        </createTable>
    </changeSet>

    <!-- Add foreign key constraint AFTER both tables exist -->
    <changeSet id="3" author="yourname">
        <addForeignKeyConstraint
                baseTableName="courses"
                baseColumnNames="department_id"
                constraintName="fk_courses_department"
                referencedTableName="department"
                referencedColumnNames="department_id"
                onDelete="CASCADE"/>
    </changeSet>





</databaseChangeLog>
