<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Create courses table -->
    <changeSet id="create-courses-table" author="yourname">
        <createTable tableName="courses">
                    <column name="course_id" type="BIGSERIAL">
                        <constraints primaryKey="true" nullable="false"/>
                    </column>
                    <column name="course_name" type="VARCHAR(255)"/>
                    <column name="course_description" type="VARCHAR(255)"/>
                    <column name="duration" type="VARCHAR(255)"/>
                    <column name="department_id" type="BIGINT"/>

                </createTable>
    </changeSet>



    <!-- Add foreign key from courses to department -->
    <changeSet id="add-fk-courses-department" author="yourname">
        <addForeignKeyConstraint
                constraintName="fk_courses_department"
                baseTableName="courses"
                baseColumnNames="department_id"
                referencedTableName="department"
                referencedColumnNames="department_id"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
