<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-students-table" author="yourname">
        <createTable tableName="students">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="roll_number" type="BIGINT"/>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)"/>
            <column name="mobile" type="VARCHAR(15)"/>
            <column name="address" type="VARCHAR(500)"/>
            <column name="date_of_birth" type="DATE"/>
            <column name="department_id" type="BIGINT"/>

            <!-- BaseEntity auditing fields -->
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <!-- Foreign Key Constraint -->
    <changeSet id="fk-students-department" author="yourname">
        <addForeignKeyConstraint
                constraintName="fk_students_department"
                baseTableName="students"
                baseColumnNames="department_id"
                referencedTableName="department"
                referencedColumnNames="department_id"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
